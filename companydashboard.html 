    <!-- Firebase SDKs -->
    <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore-compat.js"></script>

    <script>
        // Firebase Configuration
        const firebaseConfig = {
            apiKey: "AIzaSyDYhLNuJKj2ucwGimfddTfpTb32Y0c-bXg",
            authDomain: "mytask-96a79.firebaseapp.com",
            databaseURL: "https://mytask-96a79-default-rtdb.firebaseio.com",
            projectId: "mytask-96a79",
            storageBucket: "mytask-96a79.firebasestorage.app",
            messagingSenderId: "963509757773",
            appId: "1:963509757773:web:d9c81a108f5873702eb904",
            measurementId: "G-L9C1LTCZRN"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // Global Variables
        let currentUser = null;
        let companyData = null;
        let users = [];
        let teams = [];
        let projects = [];
        let tasks = [];

        // Initialize Dashboard
        document.addEventListener('DOMContentLoaded', async () => {
            // Check if company user is logged in
            const sessionUser = sessionStorage.getItem("username");
            const userType = sessionStorage.getItem("userType");
            
            if (!sessionUser || userType !== "company") {
                // Redirect to company login if not logged in
                alert("Please login as company user");
                window.location.href = "company-login.html";
                return;
            }

            // Load user data
            await loadUserData(sessionUser);
            
            // Update UI with user data
            updateUserInfo();
            
            // Load dashboard data
            await loadDashboardData();
            
            // Set up event listeners
            setupEventListeners();
            
            // Set initial active state
            showSection('dashboard');
        });

        // Load user data from Firestore
        async function loadUserData(username) {
            try {
                const querySnapshot = await db.collection("users")
                    .where("username", "==", username)
                    .get();
                
                if (!querySnapshot.empty) {
                    const userDoc = querySnapshot.docs[0];
                    currentUser = {
                        id: userDoc.id,
                        ...userDoc.data()
                    };
                    
                    // Load company users if user is company admin
                    if (currentUser.userType === "company" && currentUser.companyId) {
                        await loadCompanyUsers();
                        await loadCompanyTeams();
                        await loadCompanyProjects();
                        await loadCompanyTasks();
                    }
                }
            } catch (error) {
                console.error("Error loading user data:", error);
                alert("Error loading user data. Please try again.");
            }
        }

        // Load company users
        async function loadCompanyUsers() {
            try {
                let query = db.collection("users")
                    .where("userType", "==", "company");
                
                if (currentUser.companyId) {
                    query = query.where("companyId", "==", currentUser.companyId);
                }
                
                const querySnapshot = await query.get();
                users = [];
                querySnapshot.forEach(doc => {
                    users.push({
                        id: doc.id,
                        ...doc.data()
                    });
                });
                
                updateUserCounts();
                populateRecentUsers();
            } catch (error) {
                console.error("Error loading company users:", error);
            }
        }

        // Load company teams
        async function loadCompanyTeams() {
            try {
                const querySnapshot = await db.collection("teams")
                    .where("companyId", "==", currentUser.companyId)
                    .get();
                
                teams = [];
                querySnapshot.forEach(doc => {
                    teams.push({
                        id: doc.id,
                        ...doc.data()
                    });
                });
                
                updateTeamCounts();
                populateTeamSelects();
            } catch (error) {
                console.error("Error loading teams:", error);
            }
        }

        // Load company projects
        async function loadCompanyProjects() {
            try {
                const querySnapshot = await db.collection("projects")
                    .where("companyId", "==", currentUser.companyId)
                    .get();
                
                projects = [];
                querySnapshot.forEach(doc => {
                    projects.push({
                        id: doc.id,
                        ...doc.data()
                    });
                });
                
                updateProjectCounts();
            } catch (error) {
                console.error("Error loading projects:", error);
            }
        }

        // Load company tasks
        async function loadCompanyTasks() {
            try {
                const querySnapshot = await db.collection("tasks")
                    .where("companyId", "==", currentUser.companyId)
                    .get();
                
                tasks = [];
                querySnapshot.forEach(doc => {
                    tasks.push({
                        id: doc.id,
                        ...doc.data()
                    });
                });
                
                updateTaskCounts();
            } catch (error) {
                console.error("Error loading tasks:", error);
            }
        }

        // Load dashboard data
        async function loadDashboardData() {
            // Load initial counts
            updateAllCounts();
            
            // Populate activity log
            populateActivityLog();
            
            // Update quick stats
            updateQuickStats();
        }

        // Update user information in UI
        function updateUserInfo() {
            if (currentUser) {
                // Update sidebar
                document.getElementById('companyNameDisplay').textContent = currentUser.companyName || 'Company Name';
                document.getElementById('roleDisplay').textContent = currentUser.role || 'Company Admin';
                
                // Update user info
                const userName = currentUser.contactPerson || currentUser.username;
                document.getElementById('userName').textContent = userName;
                document.getElementById('userEmail').textContent = currentUser.companyEmail || 'admin@company.com';
                
                // Update avatar with initials
                const initials = userName.split(' ').map(n => n[0]).join('').toUpperCase();
                document.getElementById('userAvatar').textContent = initials.substring(0, 2);
                
                // Update greeting
                document.getElementById('greetingName').textContent = userName.split(' ')[0];
            }
        }

        // Update all counts
        function updateAllCounts() {
            updateUserCounts();
            updateTeamCounts();
            updateProjectCounts();
            updateTaskCounts();
        }

        // Update user counts
        function updateUserCounts() {
            const totalUsers = users.length;
            const activeUsers = users.filter(u => u.status === 'active' || u.status === 'approved').length;
            
            document.getElementById('totalUsers').textContent = totalUsers;
            document.getElementById('usersCount').textContent = totalUsers;
            document.getElementById('activeUsers').textContent = activeUsers;
        }

        // Update team counts
        function updateTeamCounts() {
            const totalTeams = teams.length;
            document.getElementById('totalTeams').textContent = totalTeams;
            document.getElementById('teamsCount').textContent = totalTeams;
        }

        // Update project counts
        function updateProjectCounts() {
            const totalProjects = projects.length;
            const activeProjects = projects.filter(p => p.status === 'active').length;
            
            document.getElementById('totalProjects').textContent = totalProjects;
            document.getElementById('projectsCount').textContent = totalProjects;
            document.getElementById('activeProjects').textContent = activeProjects;
        }

        // Update task counts
        function updateTaskCounts() {
            const totalTasks = tasks.length;
            const completedTasks = tasks.filter(t => t.status === 'completed').length;
            const overdueTasks = tasks.filter(t => {
                if (t.dueDate && t.status !== 'completed') {
                    const dueDate = new Date(t.dueDate);
                    return dueDate < new Date();
                }
                return false;
            }).length;
            
            document.getElementById('totalTasks').textContent = totalTasks;
            document.getElementById('tasksCount').textContent = totalTasks;
            document.getElementById('completedTasks').textContent = completedTasks;
            document.getElementById('overdueTasks').textContent = overdueTasks;
        }

        // Update quick stats
        function updateQuickStats() {
            // Calculate team productivity (example calculation)
            const totalTasks = tasks.length;
            const completedTasks = tasks.filter(t => t.status === 'completed').length;
            const productivity = totalTasks > 0 ? Math.round((completedTasks / totalTasks) * 100) : 0;
            
            document.getElementById('teamProductivity').textContent = `${productivity}%`;
        }

        // Populate recent users table
        function populateRecentUsers() {
            const tableBody = document.getElementById('recentUsersTable');
            const noUsersMessage = document.getElementById('noUsersMessage');
            
            if (users.length === 0) {
                tableBody.innerHTML = '';
                noUsersMessage.style.display = 'block';
                return;
            }
            
            noUsersMessage.style.display = 'none';
            
            // Sort users by creation date (newest first) and take first 5
            const recentUsers = [...users]
                .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt))
                .slice(0, 5);
            
            let html = '';
            recentUsers.forEach(user => {
                const initials = (user.fullName || user.username || 'UU')
                    .split(' ')
                    .map(n => n[0])
                    .join('')
                    .toUpperCase()
                    .substring(0, 2);
                
                const statusClass = user.status === 'active' || user.status === 'approved' ? 'status-active' :
                                 user.status === 'pending' ? 'status-pending' : 'status-inactive';
                
                const statusText = user.status === 'active' || user.status === 'approved' ? 'Active' :
                                 user.status === 'pending' ? 'Pending' : 'Inactive';
                
                html += `
                    <tr>
                        <td>
                            <div style="display: flex; align-items: center; gap: 10px;">
                                <div class="user-avatar-small">${initials}</div>
                                <div>
                                    <div style="font-weight: 500;">${user.fullName || user.username}</div>
                                    <div style="font-size: 12px; color: #666;">${user.email || user.companyEmail || ''}</div>
                                </div>
                            </div>
                        </td>
                        <td>${user.role || 'User'}</td>
                        <td><span class="status-badge ${statusClass}">${statusText}</span></td>
                        <td>
                            <div class="form-actions">
                                <button class="action-btn edit" onclick="editUser('${user.id}')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn delete" onclick="deleteUser('${user.id}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            });
            
            tableBody.innerHTML = html;
        }

        // Populate activity log
        function populateActivityLog() {
            const activityList = document.getElementById('activityList');
            const noActivityMessage = document.getElementById('noActivityMessage');
            
            // Sample activities - in real app, fetch from Firestore
            const sampleActivities = [
                {
                    icon: 'fa-user-plus',
                    title: 'New User Added',
                    description: 'John Doe joined the company',
                    time: '2 hours ago'
                },
                {
                    icon: 'fa-project-diagram',
                    title: 'Project Created',
                    description: 'New project "Website Redesign" started',
                    time: '4 hours ago'
                },
                {
                    icon: 'fa-tasks',
                    title: 'Task Completed',
                    description: 'Task "Homepage Design" marked as complete',
                    time: '1 day ago'
                },
                {
                    icon: 'fa-user-friends',
                    title: 'Team Created',
                    description: 'New team "Development Team" created',
                    time: '2 days ago'
                }
            ];
            
            if (sampleActivities.length === 0) {
                noActivityMessage.style.display = 'block';
                activityList.innerHTML = '';
                return;
            }
            
            noActivityMessage.style.display = 'none';
            
            let html = '';
            sampleActivities.forEach(activity => {
                html += `
                    <li class="activity-item">
                        <div class="activity-icon">
                            <i class="fas ${activity.icon}"></i>
                        </div>
                        <div class="activity-content">
                            <h4>${activity.title}</h4>
                            <p>${activity.description}</p>
                            <div class="activity-time">${activity.time}</div>
                        </div>
                    </li>
                `;
            });
            
            activityList.innerHTML = html;
        }

        // Populate team selects in modals
        function populateTeamSelects() {
            const userTeamSelect = document.getElementById('userTeam');
            const teamLeadSelect = document.getElementById('teamLead');
            
            // Clear existing options (keep first option)
            while (userTeamSelect.options.length > 1) userTeamSelect.remove(1);
            while (teamLeadSelect.options.length > 1) teamLeadSelect.remove(1);
            
            // Add team options
            teams.forEach(team => {
                const option1 = document.createElement('option');
                option1.value = team.id;
                option1.textContent = team.name;
                userTeamSelect.appendChild(option1);
                
                const option2 = document.createElement('option');
                option2.value = team.id;
                option2.textContent = team.name;
                teamLeadSelect.appendChild(option2);
            });
            
            // Add user options for team lead
            users.forEach(user => {
                const option = document.createElement('option');
                option.value = user.id;
                option.textContent = `${user.fullName || user.username} (${user.role || 'User'})`;
                teamLeadSelect.appendChild(option);
            });
        }

        // Show section
        function showSection(section) {
            // Hide all sections
            document.getElementById('dashboardContent').style.display = 'none';
            document.getElementById('otherSections').style.display = 'none';
            
            // Update active nav link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            // Find and activate the clicked nav link
            const navLink = document.querySelector(`[onclick="showSection('${section}')"]`);
            if (navLink) {
                navLink.classList.add('active');
            }
            
            // Update page title and breadcrumb
            const sectionTitles = {
                'dashboard': 'Dashboard',
                'analytics': 'Analytics',
                'users': 'Users Management',
                'teams': 'Teams Management',
                'departments': 'Departments',
                'projects': 'Projects',
                'tasks': 'Tasks',
                'kanban': 'Kanban Board',
                'company-settings': 'Company Settings',
                'billing': 'Billing',
                'notifications': 'Notifications'
            };
            
            const title = sectionTitles[section] || 'Dashboard';
            document.getElementById('pageTitle').textContent = title;
            document.getElementById('breadcrumbCurrent').textContent = title;
            
            // Show the selected section
            if (section === 'dashboard') {
                document.getElementById('dashboardContent').style.display = 'block';
            } else {
                document.getElementById('otherSections').style.display = 'block';
                loadSectionContent(section);
            }
        }

        // Load section content dynamically
        function loadSectionContent(section) {
            const container = document.getElementById('otherSections');
            
            switch(section) {
                case 'users':
                    container.innerHTML = `
                        <div class="section">
                            <div class="section-header">
                                <h3><i class="fas fa-users"></i> Users Management</h3>
                                <button class="btn btn-primary" onclick="openAddUserModal()">
                                    <i class="fas fa-user-plus"></i>
                                    Add User
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="data-table">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                            <th>Department</th>
                                            <th>Team</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="allUsersTable">
                                        <!-- Users will be populated here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    `;
                    populateAllUsers();
                    break;
                    
                case 'teams':
                    container.innerHTML = `
                        <div class="section">
                            <div class="section-header">
                                <h3><i class="fas fa-user-friends"></i> Teams Management</h3>
                                <button class="btn btn-primary" onclick="openAddTeamModal()">
                                    <i class="fas fa-user-friends"></i>
                                    Create Team
                                </button>
                            </div>
                            <div class="dashboard-cards" id="teamsGrid">
                                <!-- Teams will be populated here -->
                            </div>
                        </div>
                    `;
                    populateTeamsGrid();
                    break;
                    
                default:
                    container.innerHTML = `
                        <div class="section">
                            <h3>${section.charAt(0).toUpperCase() + section.slice(1)} Section</h3>
                            <p>This section is under development.</p>
                        </div>
                    `;
            }
        }

        // Populate all users table
        function populateAllUsers() {
            const tableBody = document.getElementById('allUsersTable');
            
            if (users.length === 0) {
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="7" class="empty-state">
                            <i class="fas fa-users-slash"></i>
                            <h4>No Users Found</h4>
                            <p>Start by adding your first team member</p>
                            <button class="btn btn-primary" onclick="openAddUserModal()">
                                <i class="fas fa-user-plus"></i>
                                Add User
                            </button>
                        </td>
                    </tr>
                `;
                return;
            }
            
            let html = '';
            users.forEach(user => {
                const initials = (user.fullName || user.username || 'UU')
                    .split(' ')
                    .map(n => n[0])
                    .join('')
                    .toUpperCase()
                    .substring(0, 2);
                
                const statusClass = user.status === 'active' || user.status === 'approved' ? 'status-active' :
                                 user.status === 'pending' ? 'status-pending' : 'status-inactive';
                
                const statusText = user.status === 'active' || user.status === 'approved' ? 'Active' :
                                 user.status === 'pending' ? 'Pending' : 'Inactive';
                
                html += `
                    <tr>
                        <td>
                            <div style="display: flex; align-items: center; gap: 10px;">
                                <div class="user-avatar-small">${initials}</div>
                                <div>
                                    <div style="font-weight: 500;">${user.fullName || user.username}</div>
                                    <div style="font-size: 12px; color: #666;">${user.role || 'User'}</div>
                                </div>
                            </div>
                        </td>
                        <td>${user.email || user.companyEmail || 'N/A'}</td>
                        <td>${user.role || 'User'}</td>
                        <td>${user.department || 'N/A'}</td>
                        <td>${user.team || 'N/A'}</td>
                        <td><span class="status-badge ${statusClass}">${statusText}</span></td>
                        <td>
                            <div class="form-actions">
                                <button class="action-btn edit" onclick="editUser('${user.id}')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn delete" onclick="deleteUser('${user.id}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            });
            
            tableBody.innerHTML = html;
        }

        // Populate teams grid
        function populateTeamsGrid() {
            const teamsGrid = document.getElementById('teamsGrid');
            
            if (teams.length === 0) {
                teamsGrid.innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <i class="fas fa-user-friends"></i>
                        <h4>No Teams Yet</h4>
                        <p>Create your first team to organize users</p>
                        <button class="btn btn-primary" onclick="openAddTeamModal()">
                            <i class="fas fa-user-friends"></i>
                            Create Team
                        </button>
                    </div>
                `;
                return;
            }
            
            let html = '';
            teams.forEach(team => {
                const memberCount = users.filter(u => u.team === team.id).length;
                
                html += `
                    <div class="dashboard-card" onclick="viewTeam('${team.id}')">
                        <div class="card-header">
                            <div class="card-icon teams">
                                <i class="fas fa-user-friends"></i>
                            </div>
                            <div class="card-stats">
                                <h3>${memberCount}</h3>
                                <p>Members</p>
                            </div>
                        </div>
                        <h4 style="margin-bottom: 10px; font-weight: 600;">${team.name}</h4>
                        <p style="color: #666; font-size: 14px; margin-bottom: 15px;">${team.description || 'No description'}</p>
                        <div style="display: flex; gap: 10px;">
                            <button class="action-btn edit" onclick="editTeam('${team.id}', event)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete" onclick="deleteTeam('${team.id}', event)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                `;
            });
            
            teamsGrid.innerHTML = html;
        }

        // Modal Functions
        function openAddUserModal() {
            document.getElementById('addUserModal').classList.add('active');
            // Clear form
            document.getElementById('userFullName').value = '';
            document.getElementById('userEmail').value = '';
            document.getElementById('userRole').value = '';
            document.getElementById('userDepartment').value = '';
            document.getElementById('userTeam').value = '';
        }

        function openAddTeamModal() {
            document.getElementById('addTeamModal').classList.add('active');
            // Clear form
            document.getElementById('teamName').value = '';
            document.getElementById('teamDescription').value = '';
            document.getElementById('teamLead').value = '';
            document.getElementById('teamDepartment').value = '';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Save new user
        async function saveNewUser() {
            const fullName = document.getElementById('userFullName').value.trim();
            const email = document.getElementById('userEmail').value.trim();
            const role = document.getElementById('userRole').value;
            const department = document.getElementById('userDepartment').value;
            const team = document.getElementById('userTeam').value;
            
            // Validation
            if (!fullName || !email || !role) {
                alert('Please fill in all required fields');
                return;
            }
            
            if (!validateEmail(email)) {
                alert('Please enter a valid email address');
                return;
            }
            
            try {
                // Generate username from email
                const username = email.split('@')[0].toLowerCase();
                
                // Generate temporary password
                const tempPassword = generatePassword(8);
                
                // Create user object
                const userData = {
                    username: username,
                    password: tempPassword,
                    fullName: fullName,
                    email: email,
                    role: role,
                    department: department || '',
                    team: team || '',
                    userType: 'company',
                    companyId: currentUser.companyId,
                    companyName: currentUser.companyName,
                    status: 'pending',
                    createdAt: new Date().toISOString(),
                    updatedAt: new Date().toISOString()
                };
                
                // Save to Firestore
                await db.collection("users").add(userData);
                
                // Close modal
                closeModal('addUserModal');
                
                // Show success message
                alert(`User added successfully! Temporary password: ${tempPassword}`);
                
                // Refresh users list
                await loadCompanyUsers();
                
            } catch (error) {
                console.error("Error saving user:", error);
                alert('Error saving user. Please try again.');
            }
        }

        // Save new team
        async function saveNewTeam() {
            const name = document.getElementById('teamName').value.trim();
            const description = document.getElementById('teamDescription').value.trim();
            const teamLead = document.getElementById('teamLead').value;
            const department = document.getElementById('teamDepartment').value;
            
            if (!name) {
                alert('Please enter a team name');
                return;
            }
            
            try {
                const teamData = {
                    name: name,
                    description: description,
                    teamLead: teamLead || '',
                    department: department || '',
                    companyId: currentUser.companyId,
                    createdAt: new Date().toISOString(),
                    updatedAt: new Date().toISOString()
                };
                
                await db.collection("teams").add(teamData);
                
                closeModal('addTeamModal');
                alert('Team created successfully!');
                
                await loadCompanyTeams();
                
            } catch (error) {
                console.error("Error saving team:", error);
                alert('Error creating team. Please try again.');
            }
        }

        // Edit user
        function editUser(userId) {
            const user = users.find(u => u.id === userId);
            if (user) {
                openAddUserModal();
                // Pre-fill form with user data
                document.getElementById('userFullName').value = user.fullName || '';
                document.getElementById('userEmail').value = user.email || user.companyEmail || '';
                document.getElementById('userRole').value = user.role || '';
                document.getElementById('userDepartment').value = user.department || '';
                document.getElementById('userTeam').value = user.team || '';
                
                // Change modal title and button
                document.querySelector('#addUserModal .modal-header h3').innerHTML = '<i class="fas fa-edit"></i> Edit User';
                document.querySelector('#addUserModal .btn-primary').textContent = 'Update User';
                document.querySelector('#addUserModal .btn-primary').onclick = () => updateUser(userId);
            }
        }

        // Update user
        async function updateUser(userId) {
            // Implementation similar to saveNewUser but with update
            alert('Update functionality to be implemented');
        }

        // Delete user
        async function deleteUser(userId) {
            if (confirm('Are you sure you want to delete this user?')) {
                try {
                    await db.collection("users").doc(userId).delete();
                    await loadCompanyUsers();
                    alert('User deleted successfully');
                } catch (error) {
                    console.error("Error deleting user:", error);
                    alert('Error deleting user');
                }
            }
        }

        // Edit team
        function editTeam(teamId, event) {
            event.stopPropagation();
            const team = teams.find(t => t.id === teamId);
            if (team) {
                openAddTeamModal();
                document.getElementById('teamName').value = team.name;
                document.getElementById('teamDescription').value = team.description || '';
                document.getElementById('teamLead').value = team.teamLead || '';
                document.getElementById('teamDepartment').value = team.department || '';
                
                document.querySelector('#addTeamModal .modal-header h3').innerHTML = '<i class="fas fa-edit"></i> Edit Team';
                document.querySelector('#addTeamModal .btn-primary').textContent = 'Update Team';
                document.querySelector('#addTeamModal .btn-primary').onclick = () => updateTeam(teamId);
            }
        }

        // Update team
        async function updateTeam(teamId) {
            alert('Update team functionality to be implemented');
        }

        // Delete team
        async function deleteTeam(teamId, event) {
            event.stopPropagation();
            if (confirm('Are you sure you want to delete this team?')) {
                try {
                    await db.collection("teams").doc(teamId).delete();
                    await loadCompanyTeams();
                    alert('Team deleted successfully');
                } catch (error) {
                    console.error("Error deleting team:", error);
                    alert('Error deleting team');
                }
            }
        }

        // View team details
        function viewTeam(teamId) {
            alert('View team details functionality to be implemented');
        }

        // Helper Functions
        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        function generatePassword(length) {
            const chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let password = '';
            for (let i = 0; i < length; i++) {
                password += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return password;
        }

        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
        }

        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                sessionStorage.clear();
                window.location.href = 'company-login.html';
            }
        }

        // Setup event listeners
        function setupEventListeners() {
            // Search functionality
            document.getElementById('searchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    const query = e.target.value.trim();
                    if (query) {
                        alert(`Search for: ${query}`);
                        // Implement search functionality
                    }
                }
            });
            
            // Close modals when clicking outside
            document.querySelectorAll('.modal-overlay').forEach(modal => {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        modal.classList.remove('active');
                    }
                });
            });
            
            // Escape key to close modals
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    document.querySelectorAll('.modal-overlay').forEach(modal => {
                        modal.classList.remove('active');
                    });
                }
            });
        }

        // Initialize search
        function initSearch() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', debounce((e) => {
                const query = e.target.value.toLowerCase().trim();
                if (query) {
                    // Implement search logic
                    console.log('Searching for:', query);
                }
            }, 300));
        }

        // Debounce function for search
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }
    </script>
</body>
</html>